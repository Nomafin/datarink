{
  "name": "datarink",
  "description": "Web app for displaying hockey data",
  "author": "datarink",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevkan/datarink.git"
  },
  "license": "ISC",
  "scripts": {
    "start": "node server.js",
    "watchify": "watchify -vd -p browserify-hmr -e ./vue-src/app.js -o ./public/build.js",
    "serve": "http-server ./public -o -s -c 1 -a localhost -p 5000",
    "dev": "npm-run-all --parallel watchify serve",
    "build": "NODE_ENV=production browserify -g envify -p [ vueify/plugins/extract-css -o ./public/build.css ] -e ./vue-src/app.js | uglifyjs -c > ./public/build.js"
  },
  "dependencies": {
    "async": "^2.1.4",
    "compression": "^1.6.2",
    "express": "^4.14.0",
    "http-auth": "^3.1.1",
    "lodash": "^4.17.2",
    "pg": "^6.1.0",
    "request": "^2.79.0",
    "throng": "^4.0.0",
    "vue": "^2.0.8",
    "vue-router": "^2.0.3"
  },
  "devDependencies": {
    "browserify": "^13.1.1",
    "browserify-hmr": "^0.3.5",
    "envify": "^4.0.0",
    "http-server": "^0.9.0",
    "node-sass": "^4.0.0",
    "npm-run-all": "^3.1.2",
    "uglify-js": "^2.7.5",
    "vueify": "^9.4.0",
    "watchify": "^3.7.0"
  },
  "browser": {
    "vue": "vue/dist/vue.common"
  },
  "browserify": {
    "transform": [
      "vueify"
    ]
  }
}
